{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		/* target */
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		/* Bundler mode */
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src", "vite.config.ts"],
	"exclude": ["dist"]
}
