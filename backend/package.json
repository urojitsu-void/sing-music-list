{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "prisma generate & nest build",
		"start": "node dist/src/main",
		"openapi": "npx @rtk-query/codegen-openapi openapi-config.ts",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"dev": "nest start --watch",
		"debug": "nest start --debug --watch",
		"test": "run-p test:*",
		"test:unit": "jest",
		"test:e2e": "jest --config ./src/jest-e2e.json",
		"coverage": "jest --coverage",
		"prisma:generate": "prisma generate",
		"prisma:create": "prisma migrate dev --create-only",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy",
		"scaffold": "nest g resource"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.0.0",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/serve-static": "^4.0.2",
		"@nestjs/swagger": "^7.4.1",
		"@prisma/client": "5.19.1",
		"axios": "^1.7.7",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@mermaid-js/mermaid-cli": "^11.2.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@prisma/generator-helper": "^5.19.1",
		"@rtk-query/codegen-openapi": "^1.2.0",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.13",
		"@types/node": "^20.3.1",
		"@types/supertest": "^2.0.12",
		"jest": "^29.5.0",
		"prisma": "^5.19.1",
		"prisma-erd-generator": "^1.11.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
